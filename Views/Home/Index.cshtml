@using SocialPulse.Core.ViewModels

@model IEnumerable<SocialProfileViewModel>

@{
    ViewData["Title"] = "Strona główna";
}

<h2 class="mb-2">Profile</h2>

<div class="row">
    @foreach (var profile in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top"
                     src="@profile.ProfileImageBase64"
                     alt="Zdjęcie profilowe"
                     style="max-height:200px; object-fit:cover;" />

                <div class="card-body">
                    <h5 class="card-title">@profile.UserName</h5>

                    <p class="card-text">
                        @(profile.Content.Length > 100
                            ? profile.Content.Substring(0, 100) + "..."
                            : profile.Content)
                    </p>

                    <button type="button"
                            class="btn btn-primary"
                            data-toggle="modal"
                            data-target="#profileModal"
                            onclick="window.location.href='@Url.Action("ViewProfile", "Home", new { id = profile.Id })'">
                        Wyświetl profil
                    </button>
                </div>
            </div>
        </div>
    }
</div>