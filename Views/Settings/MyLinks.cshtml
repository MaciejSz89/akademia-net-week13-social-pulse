@using SocialPulse.Core.ViewModels

@model SocialProfileViewModel

@{
    ViewData["Title"] = "Zarządzanie linkami użytkownika " + Model.UserName;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle" id="userLinksTable">
                    <thead class="table-light">
                        <tr>
                            <th>L.p.</th>
                            <th>Tytuł</th>
                            <th>Adres URL</th>
                            <th>Obrazek</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.UserLinks.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center">Brak linków.</td>
                            </tr>
                        }
                        else
                        {
                            @for (var i = 0; i < Model.UserLinks.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <input asp-for="UserLinks[@i].Title"
                                               class="form-control"
                                               placeholder="Enter title" />
                                    </td>
                                    <td>
                                        <input asp-for="UserLinks[@i].Url"
                                               class="form-control"
                                               placeholder="Enter URL" />
                                    </td>
                                    <td>
                                        @if (Model.UserLinks[i].Image != null)
                                        {
                                            <img src="@Model.UserLinks[i].ImageBase64"
                                                 alt="Obrazek linku"
                                                 class="img-thumbnail"
                                                 style="width: 50px; height: 50px;" />
                                        }
                                        else
                                        {
                                            <span>Brak obrazka</span>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-sm">
                                            Zapisz
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm">
                                            Usuń
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <h4>Add New Link</h4>
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" id="newLinkTitle" class="form-control" placeholder="Enter title" />
                    </div>
                    <div class="col-md-4">
                        <input type="text" id="newLinkUrl" class="form-control" placeholder="Enter URL" />
                    </div>
                    <div class="col-md-3">
                        <input type="file" id="newLinkImage" class="form-control" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-primary" id="addLinkButton">
                            <i class="bi bi-plus-circle"></i> Add
                        </button>
                    </div>
                </div>
                <div id="validationMessage" class="text-danger mt-2" style="display: none;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add New Link
            $("#addLinkButton").on("click", function () {
                const title = $("#newLinkTitle").val().trim();
                const url = $("#newLinkUrl").val().trim();
                const imageInput = $("#newLinkImage")[0];
                const validationMessage = $("#validationMessage");

                // Clear validation message
                validationMessage.hide().text("");

                // Validation logic
                if (!title) {
                    validationMessage.text("Tytuł jest wymagany.").show();
                    return;
                }

                if (!url) {
                    validationMessage.text("Adres URL jest wymagany.").show();
                    return;
                }

                if (!isValidUrl(url)) {
                    validationMessage.text("Adres URL jest nieprawidłowy.").show();
                    return;
                }

              if (imageInput.files.length > 0) {
                    const file = imageInput.files[0];
                    if (!file.type.startsWith("image/")) {
                        validationMessage.text("The uploaded file must be an image.").show();
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function (e) {
                        // Add new link row to the table
                        const newRow = `
                            <tr>
                                <td>#</td>
                                <td><input type="text" value="${title}" class="form-control" placeholder="Enter title" /></td>
                                <td><input type="text" value="${url}" class="form-control" placeholder="Enter URL" /></td>
                                <td><img src="${e.target.result}" alt="Link Image" class="img-thumbnail" style="width: 50px; height: 50px;" /></td>
                                <td>
                                    <button type="button" class="btn btn-success btn-sm save-link">
                                        <i class="bi bi-save"></i> Save
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm remove-link">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </td>
                            </tr>
                        `;

                        $("#userLinksTable tbody").append(newRow);
                        clearInputs();
                    };

                    reader.readAsDataURL(file);
                } else {
                    // Add new link row without image
                    const newRow = `
                        <tr>
                            <td>#</td>
                            <td><input type="text" value="${title}" class="form-control" placeholder="Enter title" /></td>
                            <td><input type="text" value="${url}" class="form-control" placeholder="Enter URL" /></td>
                            <td><span class="text-muted">No Image</span></td>
                            <td>
                                <button type="button" class="btn btn-success btn-sm save-link">
                                    <i class="bi bi-save"></i> Save
                                </button>
                                <button type="button" class="btn btn-danger btn-sm remove-link">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </td>
                        </tr>
                    `;

                    $("#userLinksTable tbody").append(newRow);
                    clearInputs();
                }


            });

            // Remove Link
            $("#userLinksTable").on("click", ".remove-link", function () {
                $(this).closest("tr").remove();
            });

            // Validate URL
            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }

            // Clear input fields
            function clearInputs() {
                $("#newLinkTitle").val("");
                $("#newLinkUrl").val("");
                $("#newLinkImage").val("");
            }
        });
    </script>
}