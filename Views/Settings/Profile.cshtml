@using SocialPulse.Core.ViewModels
@model SocialProfileViewModel

@{
    ViewData["Title"] = "Ustawienia profilu " + Model.UserName;
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>@ViewData["Title"]</h2>
                    <hr />

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)

                    <div class="form-floating mb-3">
                        <input asp-for="UserName"
                               class="form-control"
                               aria-required="true"
                               placeholder="username" />
                        <label asp-for="UserName"
                               class="form-label">
                        </label>
                        <span asp-validation-for="UserName"
                              class="text-danger" />
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="Email"
                               class="form-control"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Email"
                               class="form-label">
                        </label>
                        <span asp-validation-for="Email"
                              class="text-danger" />
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Content"
                                  class="form-control"
                                  aria-required="true"
                                  placeholder="Wprowadź opis..."
                                  style="height: 150px;"></textarea>
                        <label asp-for="Content"
                               class="form-label">
                        </label>
                        <span asp-validation-for="Content"
                              class="text-danger" />
                    </div>

                    <h4>Social links</h4>
                    <table class="table align-middle">
                        @foreach (var socialLink in Model.SocialLinks)
                        {
                            <tr>
                                <td class="align-middle" style="width: 50px;">
                                    <img src="@socialLink.SocialNetwork.Icon"
                                         alt="@socialLink.SocialNetwork.Name"
                                         style="width: 24px; height: 24px;">
                                </td>
                                <td class="align-middle" style="width: 50%;">
                                    <span>@socialLink.SocialNetwork.BaseDomain</span>
                                </td>
                                <td class="align-middle">
                                    <span>@socialLink.RemainingUrl</span>
                                </td>
                            </tr>
                        }
                    </table>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}