@using SocialPulse.Core.ViewModels
@model SocialProfileViewModel

@{
    ViewData["Title"] = "Ustawienia profilu " + Model.UserName;
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <section>
                <form id="account" method="post">
                    <h2>@ViewData["Title"]</h2>
                    <hr />

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)

                    <div class="mb-3">
                        <div class="text-center">
                            <img id="ProfileImagePreview" 
                                 src="@Model.ProfileImageBase64"
                                 alt="Profile Image"
                                 class="rounded-circle img-thumbnail mb-3"
                                 style="width: 150px; height: 150px;">
                        </div>
                        <div>
                            <label asp-for="ProfileImage" class="form-label">Załaduj nowe zdjęcie profilowe</label>
                            <input asp-for="ProfileImage"
                                   type="file"
                                   class="form-control"
                                   id="ProfileImage"
                                   accept="image/*" />
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserName"
                               class="form-control"
                               aria-required="true"
                               placeholder="username" />
                        <label asp-for="UserName"
                               class="form-label">
                        </label>
                        <span asp-validation-for="UserName"
                              class="text-danger" />
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="Email"
                               class="form-control"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Email"
                               class="form-label">
                        </label>
                        <span asp-validation-for="Email"
                              class="text-danger" />
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Content"
                                  class="form-control"
                                  aria-required="true"
                                  placeholder="Wprowadź opis..."
                                  style="height: 150px;"></textarea>
                        <label asp-for="Content"
                               class="form-label">
                        </label>
                        <span asp-validation-for="Content"
                              class="text-danger" />
                    </div>

                    <h4>Social links</h4>
                    <table class="table align-middle">
                        @for (var i = 0; i < Model.SocialLinks.Count; i++)
                        {
                            <tr>
                                <td class="align-middle" style="white-space: nowrap;">
                                    <img src="@Model.SocialLinks[i].SocialNetwork.IconBase64"
                                         alt="@Model.SocialLinks[i].SocialNetwork.Name"
                                         style="width: 24px; height: 24px;">
                                </td>
                                <td class="align-middle" style="white-space: nowrap;">
                                    <span>@Model.SocialLinks[i].SocialNetwork.Url</span>
                                </td>
                                <td class="align-middle w-100">
                                    <input asp-for="SocialLinks[@i].RemainingUrl"
                                           class="form-control"
                                           aria-required="true"
                                           placeholder="Tu wpisz resztę adresu..." />
                                </td>
                            </tr>
                        }
                    </table>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" 
                            class="btn btn-primary">
                            Zapisz
                        </button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScripts" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const profileImageInput = document.getElementById("ProfileImage");
            const profileImagePreview = document.getElementById("ProfileImagePreview");

            profileImageInput.addEventListener("change", function () {
                const file = this.files[0];

                if (file) {
                    const reader = new FileReader();

                    // When the image file is loaded
                    reader.onload = function (e) {
                        profileImagePreview.src = e.target.result; // Set the preview image's source
                    };

                    // Read the image file as a Data URL
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}